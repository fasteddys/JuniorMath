@using  JuniorMath.Web.ViewModels.Exam
@model ExamGroupViewModel

@{
    ViewData["Title"] = "Exams";
    Layout = "~/Views/Shared/_Layout.cshtml";
}

<div class="animated fadeIn  view-patients-content">
    <img id="search-spinner" class="invisible" src='/images/loading.gif' width='30' height='30' />

    <div class="row">
        <div class="col-lg-12">
            <div class="card">
                <div class="card-header">
                    <i class="fa fa-align-justify"></i>New Exams
                </div>
                <div class="card-body">
                    <div class="table-responsive-md text-nowrap">
                        <table class="table table-bordered table-striped table-sm table-patients">
                            <thead>
                                <tr>
                                    <th>EXAM NAME</th>
                                    <th>EXAM Description</th>
                                    <th>CREATE DATE</th>
                                    <th>TEACHER</th>
                                    <th>STATUS</th>
                                </tr>
                            </thead>
                            <tbody>
                                @if (Model != null && Model.Exams.Any())
                                {
                                    @foreach (var item in Model.Exams)
                                    {
                                        <tr>
                                            <td>
                                                <a href="/Exam/ExamPaper?id=@item.ExamId">@Html.DisplayFor(modelItem => item.ExamName) </a>
                                            </td>
                                            <td>@Html.DisplayFor(modelItem => item.Description)</td>
                                            <td>@Html.DisplayFor(modelItem => item.CreateDate)</td>
                                            <td>@Html.DisplayFor(modelItem => item.Teacher)</td>
                                            <td>@Html.DisplayFor(modelItem => item.Active)</td>
                                        </tr>
                                    }
                                }

                            </tbody>
                        </table>
                    </div>
                </div>
            </div>
        </div>
        <!--/.col-->
    </div>
    <!--/.row-->
    <div class="row">
        <div class="col-lg-12">
            <div class="card">
                <div class="card-header">
                    <i class="fa fa-align-justify"></i>Submitted Exams
                </div>
                <div class="card-body">
                    <div class="table-responsive-md text-nowrap">
                        <table class="table table-bordered table-striped table-sm table-patients">
                            <thead>
                                <tr>
                                    <th>EXAM NAME</th>
                                    <th>EXAM Description</th>
                                    <th>TEACHER</th>
                                    <th>SUBMITTED DATE</th>
                                    <th>MARKS</th>
                                    <th>STATUS</th>
                                </tr>
                            </thead>
                            <tbody>
                                @if (Model != null && Model.StudentExams.Any())
                                {
                                    @foreach (var item in Model.StudentExams)
                                    {
                                <tr>
                                    <td>@Html.DisplayFor(modelItem => item.ExamName)</td>
                                    <td>@Html.DisplayFor(modelItem => item.Description)</td>
                                    <td>@Html.DisplayFor(modelItem => item.Teacher)</td>
                                    <td>@Html.DisplayFor(modelItem => item.SubmittedDate)</td>
                                    <td>@Html.DisplayFor(modelItem => item.TotalMarks)</td>
                                    <td>Submitted</td>
                                </tr>
                                    }
                                }

                            </tbody>
                        </table>
                    </div>
                </div>
            </div>
        </div>
        <!--/.col-->
    </div>


</div>
@section Styles {
    @*<link href="~/css/patient/patient.css" rel="stylesheet">*@
}


